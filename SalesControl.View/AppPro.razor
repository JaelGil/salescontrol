@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Routing
@using SalesControl.ViewModel.Component
@using SalesControl.ViewModel.Exceptions
@using SalesControl.ViewModel.Layout
@namespace SalesControl.View.AppPro

<Router AppAssembly="@typeof(AppPro).Assembly" AdditionalAssemblies="new[] {typeof(RegistryClients).Assembly}">
    <Found Context = "routeData">
        <ErrorBoundary>
            <ChildContent>
                <RouteView RouteData= "routeData" DefaultLayout="@typeof(MainLayout)" />
            </ChildContent>
            <ErrorContent>
                <p>Ocurrió un error inesperado.</p>
                <ExceptionDisplay Exception="context" /> 
            </ErrorContent>
        </ErrorBoundary>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Lo sentimos, no hay nada en esta dirección.</p>
        </LayoutView>
    </NotFound>
</Router>



